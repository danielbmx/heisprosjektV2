// Panel

package ...

import(
		elevdriver "../elevdriver"
		

		)

func panel(buttonEventChan chan elevdriver.Button, setLightChan chan ) {
	
	var passOn elevdriver.Button
	var setLight ordersystem.setLightFromOrder
	
	for{
		select{
			case passOn = <- buttonEventChan: 
				// Pass on buttons to ordersystem on the btnPanelToOrder channel
				btnPanelToOrder <- passOn

			case setLight = <- setLightChan:
				// Set lights on panel
				elevdriver.SetButtonLight(setLight.Floor, setLight.Dir, setLight.Light)
		}

	}



}
